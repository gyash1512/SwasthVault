# SwasthVault Backend Development Environment Variables
# Copy this to .env for local development

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://swasthvault_user:swasthvault_user_password@localhost:27017/swasthvault?authSource=swasthvault

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=swasthvault_redis_password

# JWT Configuration (Development - Use secure keys in production)
JWT_SECRET=dev_jwt_secret_key_minimum_32_characters_long_for_development
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=dev_refresh_secret_key_minimum_32_characters_long_for_development
JWT_REFRESH_EXPIRE=30d

# Encryption Configuration (Development - Use secure keys in production)
ENCRYPTION_KEY=dev_32_character_encryption_key
ENCRYPTION_IV=dev_16_char_iv

# Session Configuration
SESSION_SECRET=dev_session_secret_minimum_32_characters_long_for_development

# Email Configuration (Development - Use Ethereal Email for testing)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your_ethereal_username
SMTP_PASS=your_ethereal_password
# Alternative: Use Mailtrap for development
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_USER=your_mailtrap_username
# SMTP_PASS=your_mailtrap_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration (Relaxed for development)
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Development Features
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
MOCK_EXTERNAL_APIS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Database Seeding
ENABLE_AUTO_SEED=true
SEED_ADMIN_EMAIL=admin@swasthvault.com
SEED_ADMIN_PASSWORD=admin123

# External API Configuration (Development)
AADHAAR_API_URL=https://api.aadhaar.gov.in/mock
AADHAAR_API_KEY=mock_aadhaar_api_key
BIOMETRIC_API_URL=https://api.biometric.mock.com
BIOMETRIC_API_KEY=mock_biometric_api_key

# SMS Configuration (Development - Use mock service)
SMS_PROVIDER=mock
SMS_API_KEY=mock_sms_api_key
SMS_SENDER_ID=SWASTH

# Blockchain Configuration (Development - Use testnet)
BLOCKCHAIN_NETWORK=testnet
BLOCKCHAIN_PRIVATE_KEY=mock_blockchain_private_key
BLOCKCHAIN_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Development Database Options
DB_DEBUG=true
DB_SLOW_QUERY_THRESHOLD=100

# Cache Configuration
CACHE_TTL=300
CACHE_PREFIX=swasthvault:dev:

# Session Configuration
SESSION_STORE=redis
SESSION_TTL=86400

# Development URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Development Flags
SKIP_EMAIL_VERIFICATION=true
ALLOW_WEAK_PASSWORDS=true
ENABLE_TEST_ROUTES=true
MOCK_PAYMENT_GATEWAY=true

# Monitoring Configuration (Development)
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# Development Security (Relaxed)
DISABLE_RATE_LIMITING=false
ALLOW_HTTP=true
SKIP_HTTPS_REDIRECT=true

# Testing Configuration
TEST_DATABASE_URL=mongodb://swasthvault_user:swasthvault_user_password@localhost:27017/swasthvault_test?authSource=swasthvault
TEST_REDIS_URL=redis://:swasthvault_redis_password@localhost:6379/1

# Development Notes:
# - These are development-only settings
# - Use secure, randomly generated keys in production
# - Never commit real API keys or passwords
# - Use environment-specific configuration files
# - Test with different configurations before production deployment
