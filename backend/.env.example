# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/swasthvault
MONGODB_TEST_URI=mongodb://localhost:27017/swasthvault_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here
JWT_REFRESH_EXPIRE=30d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_IV=your_16_character_iv_here

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Aadhaar Integration (Mock for development)
AADHAAR_API_URL=https://api.aadhaar.gov.in
AADHAAR_API_KEY=your_aadhaar_api_key

# Blockchain Configuration (for audit trails)
BLOCKCHAIN_NETWORK=ethereum
BLOCKCHAIN_PRIVATE_KEY=your_blockchain_private_key
BLOCKCHAIN_CONTRACT_ADDRESS=your_contract_address

# Biometric Service Configuration
BIOMETRIC_API_URL=https://api.biometric-service.com
BIOMETRIC_API_KEY=your_biometric_api_key

# Emergency Access Configuration
EMERGENCY_ACCESS_TIMEOUT=300
EMERGENCY_QR_EXPIRY=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Two-Factor Authentication
TOTP_SERVICE_NAME=SwasthVault
TOTP_ISSUER=SwasthVault Healthcare System
