# SwasthVault Production Environment Variables
# Copy this file to .env and update with your production values

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production_minimum_32_characters

# Encryption Keys (must be exactly 32 characters for key and 16 for IV)
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_IV=your_16_char_iv

# Session Secret
SESSION_SECRET=your_session_secret_change_in_production_minimum_32_characters

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Optional: External API Keys
AADHAAR_API_KEY=your_aadhaar_api_key_if_available
BIOMETRIC_API_KEY=your_biometric_api_key_if_available

# Optional: Blockchain Configuration
BLOCKCHAIN_PRIVATE_KEY=your_blockchain_private_key_if_using
BLOCKCHAIN_CONTRACT_ADDRESS=your_contract_address_if_using

# Optional: SMS Configuration
SMS_API_KEY=your_sms_api_key_if_available
SMS_SENDER_ID=your_sms_sender_id

# Security Note:
# - Generate strong, unique passwords for production
# - Use environment-specific secrets
# - Never commit this file with real secrets to version control
# - Consider using a secrets management service for production
